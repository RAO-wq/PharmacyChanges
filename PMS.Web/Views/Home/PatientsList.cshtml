@{
    ViewData["Title"] = "Patients List";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid px-0">
            <div class="card card-custom">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label" id="cardTitle">
                            Patients List
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        <a href="#" class="btn btn-sm btn-secondary font-weight-bold">
                            <i class="flaticon-add-circular-button"></i> Add New Patient
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-7">
                        <div class="row align-items-center">
                            <div class="col-md-3 my-2 my-md-0">
                                <div class="input-icon">
                                    <input type="text" class="form-control" placeholder="Search here" id="kt_datatable_search_query" />
                                    <span><i class="flaticon2-search-1 text-muted"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="Patients_Grid" style="margin: auto; width: 100%; padding: 10px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/KTDatatable/KTDatatable.bundle.js"></script>
<script src="~/js/Patients.js" asp-append-version="true"></script>
